{
  "compilerOptions": {
    "target": "ES2020",                  
    "lib": ["ES2020"],                   
    "allowJs": true,                     
    "skipLibCheck": true,                
    "strict": true,                      
    "esModuleInterop": true,             
    "module": "CommonJS",                
    "moduleResolution": "node",          
    "outDir": "./dist",                  
    "rootDir": "./src",                  
    "resolveJsonModule": true,           
    "isolatedModules": true,             
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"]                 
    }
  },
  "include": ["src/**/*.ts"],            
  "exclude": ["node_modules"]            
}

